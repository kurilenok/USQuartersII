<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItem"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="4dp"
    cardview:cardBackgroundColor="@color/white"
    cardview:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rlHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="Aaland" />

        <ImageView
            android:id="@+id/ivCoin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/tvName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:src="@drawable/park2" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:text="2013" />

        <TextView
            android:id="@+id/tvMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvYear"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:text="D" />

        <TextView
            android:id="@+id/tvUnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/accent" />

        <TextView
            android:id="@+id/tvAUnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvUnc"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="5" />

        <TextView
            android:id="@+id/tvFine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvAUnc"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="5" />

        <TextView
            android:id="@+id/tvGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvFine"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="5" />

    </RelativeLayout>

</android.support.v7.widget.CardView>